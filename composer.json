{
	"name": "pronamic/wp-pronamic-pay-with-mollie-for-contact-form-7",
	"description": "Pronamic Pay plugin with Mollie for Contact Form 7 integration.",
	"type": "wordpress-plugin",
	"license": "GPL-2.0-or-later",
	"config": {
		"allow-plugins": {
			"composer/installers": true,
			"automattic/jetpack-autoloader": true,
			"dealerdirect/phpcodesniffer-composer-installer": true,
			"roots/wordpress-core-installer": true
		},
		"platform": {
			"php": "7.4"
		},
		"platform-check": false,
		"sort-packages": true
	},
	"extra": {
		"installer-disable": [
			"wordpress"
		]
	},
	"require": {
		"php": ">=7.4",
		"automattic/jetpack-autoloader": "^2.11",
		"composer/installers": "^2.2",
		"woocommerce/action-scheduler": "^3.5",
		"wp-pay-extensions/contact-form-7": "^3.2",
		"wp-pay-gateways/mollie": "^4.7",
		"wp-pay/core": "^4.7"
	},
	"require-dev": {
		"pronamic/wp-coding-standards": "^1.3",
		"pronamic/wp-deployer": "^1.2",
		"roots/wordpress": "^6.1",
		"wp-cli/wp-cli": "dev-main",
		"wp-cli/wp-cli-bundle": "dev-main"
	},
	"scripts": {
		"build": [
			"rm -rf ./build/",
			"mkdir ./build/",
			"mkdir ./build/plugin/",
			"rsync --recursive --delete --exclude-from=.pronamic-build-ignore ./ ./build/plugin/",
			"composer install --no-dev --prefer-dist --optimize-autoloader --working-dir=./build/plugin/",
			"vendor/bin/wp dist-archive ./build/plugin/ --plugin-dirname=pronamic-pay-with-mollie-for-contact-form-7",
			"vendor/bin/wp dist-archive ./build/plugin/ ./build/pronamic-pay-with-mollie-for-contact-form-7.zip --plugin-dirname=pronamic-pay-with-mollie-for-contact-form-7"
		],
		"version": [
			"@build"
		]
	}
}
